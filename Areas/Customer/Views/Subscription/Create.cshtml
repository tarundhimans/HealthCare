@model E_Healthcare.Models.Subscription

<h2>Create Subscription</h2>

<form asp-action="Create">
    <div class="form-group col-lg-5">
        <label asp-for="SubscriptionPlanId" class="control-label">Select Subscription Plan:</label>
        <select asp-for="SubscriptionPlanId" class="form-control" asp-items="@ViewBag.SubscriptionPlans"></select>
        <span asp-validation-for="SubscriptionPlanId" class="text-danger"></span>
    </div>
   
    <div class="form-group col-lg-5">
        <label asp-for="ApplicationUserId" class="control-label"></label>
        <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.UserId"></select>
       @*  <span asp-validation-for="ApplicationUserId" class="text-danger"></span> *@
    </div>

    <div class="form-group col-lg-5">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group col-lg-5">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
