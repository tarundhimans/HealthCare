@{
    ViewData["Title"] = "Subscribe";
}

<style>
    /* Center the content vertically and horizontally */
    .center {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Make the container fill the viewport height */
    }

    /* Style the message container */
    .message-container {
        background-color: #f0f0f0;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 400px; /* Limit the width of the message container */
    }

    /* Style the success message */
    .success-message {
        color: #4CAF50; /* Green color */
        font-size: 24px;
        font-weight: bold;
    }
</style>

<div class="center">
    <div class="message-container">
        <h2 class="success-message">Success!</h2>
        <p>Thank you for subscribing. Your purchase was successful.</p>
    </div>
</div>
